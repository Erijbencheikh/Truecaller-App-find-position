<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Decorative Icon (Static, no Java ID needed) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/background_tint"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_location_on_24"
                app:tint="@color/primary"
                android:contentDescription="Location Icon" />
        </androidx.cardview.widget.CardView>

        <!-- Pseudo -->
        <TextView
            android:id="@+id/tvPseudo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Pseudo"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Numero -->
        <TextView
            android:id="@+id/tvNumero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="00 00 00 00"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvPseudo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPseudo" />

        <!-- Coordinates (Styled as a tag/chip) -->
        <TextView
            android:id="@+id/tvCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lat: 0.0, Long: 0.0"
            android:layout_marginTop="6dp"
            android:background="@drawable/abc_edit_text_material"
            android:backgroundTint="@color/background_tint"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/tvPseudo"
            app:layout_constraintTop_toBottomOf="@id/tvNumero"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>